<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/depth_review_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/chris_evans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            />

        <TextView
            android:id="@+id/depth_review_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Chris"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/depth_review_profile"
            app:layout_constraintStart_toEndOf="@+id/depth_review_profile"
            app:layout_constraintTop_toTopOf="@+id/depth_review_profile" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="|"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/depth_review_name_tv"
            app:layout_constraintStart_toEndOf="@+id/depth_review_name_tv"
            app:layout_constraintTop_toTopOf="@+id/depth_review_name_tv" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/star"
            app:layout_constraintBottom_toBottomOf="@+id/depth_review_name_tv"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/depth_review_name_tv" />

        <TextView
            android:id="@+id/depth_review_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/depth_review_name_tv"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/depth_review_name_tv" />

        <TextView
            android:id="@+id/depth_review_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:background="?android:attr/selectableItemBackground"
            android:text="orem ipsum dolor sit amet, consectetur adipiscing elit. Nulla dictum dapibus ex a efficitur. Duis varius, ante a dap..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/depth_review_profile" />

        <ImageView
            android:id="@+id/depth_review_like_btn"
            android:paddingRight="20dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumpups_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/depth_review_desc_tv" />

        <TextView
            android:id="@+id/depth_review_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            app:layout_constraintBottom_toBottomOf="@+id/depth_review_like_btn"
            app:layout_constraintEnd_toEndOf="@+id/depth_review_like_btn"

            app:layout_constraintTop_toTopOf="@+id/depth_review_like_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>