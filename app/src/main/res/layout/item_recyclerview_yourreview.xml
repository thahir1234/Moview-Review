<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/your_review_profile_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/your_review_profile"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/dune"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/your_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Dune"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/your_review_profile_cv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="|"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/your_review_title"
            app:layout_constraintStart_toEndOf="@+id/your_review_title"
            app:layout_constraintTop_toTopOf="@+id/your_review_title" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/star"
            app:layout_constraintBottom_toBottomOf="@+id/your_review_title"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/your_review_title" />

        <TextView
            android:id="@+id/your_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <TextView
            android:id="@+id/your_review_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="\n-- No comments --"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/your_review_profile_cv"
            app:layout_constraintTop_toBottomOf="@+id/your_review_title" />

        <ImageView
            android:id="@+id/your_review_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="264dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            android:src="@drawable/thumpups_off"
            app:layout_constraintBottom_toBottomOf="@+id/your_review_delete"
            app:layout_constraintEnd_toStartOf="@+id/your_review_delete"
            app:layout_constraintTop_toTopOf="@+id/your_review_delete"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/your_review_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="56"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/your_review_delete"
            app:layout_constraintStart_toStartOf="@+id/your_review_like"
            app:layout_constraintTop_toTopOf="@+id/your_review_delete"
             />

        <ImageView
            android:id="@+id/your_review_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:src="@drawable/delete"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_review_barrier" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/your_review_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="your_review_content,your_review_profile_cv"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="158dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>